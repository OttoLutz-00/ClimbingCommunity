<!DOCTYPE html>
<html lang="en-us">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ClimbingCommunity</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>


    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        @Html.ActionLink("ClimbingCommunity", "Index", "Home", new { area = "" }, new { @class = "navbar-brand ms-3" })
        <button class="navbar-toggler me-2" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div id="navbar" class="navbar-collapse collapse justify-content-between">
            <ul class="navbar-nav me-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item active p-2 py-1">@Html.ActionLink("Gyms", "Index", "Gym", new { area = "" }, new { @class = "nav - link" })</li>
                    <li class="nav-item p-2 py-1">@Html.ActionLink("Climbers", "Index", "Climber", new { area = "" }, new { @class = "nav - link" })</li>
                    <li class="nav-item p-2 py-1">@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav - link" })</li>
                }
            </ul>

            @Html.Partial("_LoginPartial")

        </div>

    </nav>



    <div class="container body-content mt-4">

        @RenderBody()

        <hr />

        <footer>
            <p>&copy; @DateTime.Now.Year - ClimbingCommunity</p>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
